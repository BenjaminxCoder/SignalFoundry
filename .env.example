# ================================
# PostgreSQL Database Settings
# ================================
# Connection string for the core operational database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/signalfoundry_core_dev?sslmode=disable

# ================================
# RabbitMQ Message Broker
# ================================
# Default local credentials: guest/guest
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# ================================
# Security / Auth
# ================================
# Secret key for signing JWT tokens (change in production!)
JWT_SECRET=changeme

# ================================
# Service Configuration
# ================================
# API service port (Go API)
API_PORT=8080

# Worker name for logging and routing
WORKER_NAME=sf_worker